{
    "type": "library",
    "name": "neo4j-php/query-api",
    "description": "Easy to use class to run Cypher queries on the Query API",
    "require": {
        "guzzlehttp/guzzle": "^7.9",
        "psr/http-client": "^1.0",
        "ext-json": "*",
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "friendsofphp/php-cs-fixer": "^3.68"
    },
    "autoload": {
        "psr-4": {
            "Neo4j\\QueryAPI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Neo4j\\QueryAPI\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "p123-stack",
            "email": "pratikshazalte83@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },

     "scripts": {
         "cs": "vendor/bin/php-cs-fixer check",
         "cd-fix": "vendor/bin/php-cs-fixer fix"
     }
}
